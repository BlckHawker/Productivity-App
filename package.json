{
  "type": "module",
  "name": "productivity-app",
  "private": true,
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "test": "npm --prefix backend install && npm --prefix backend run test",
    "test:coverage": "cd backend && npm run test:coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-require-explicit-generics": "^1.0.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jiti": "^2.5.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.27.1"
  }
}
